@model QLSVNgoaiTru.Models.phieudongtienphong

@{
    ViewBag.Title = "AddPhieuDongTienPhong";
    Layout = "~/Views/Shared/_LayoutCNT.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">Đóng tiền phòng</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-5">
    <div class="card-header">
        Đóng tiền phòng
    </div>
    <div class="card-body">
        <div class="col-md-8">
            @using (Html.BeginForm("AddPhieuDongTienPhong", "ChuNT", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
            <form>
                <div class="form-group">
                    <label>Ngày lập phiếu: </label>
                    @Html.EditorFor(model => model.Ngaylap, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label>Phòng: </label>
                    @Html.DropDownListFor(model => model.Maphongtro, new SelectList(ViewBag.Phong, "Maphongtro", "Sophong"), new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label>Số tiền: </label>
                    @Html.EditorFor(model => model.SoTien, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                    @ViewBag.Thongbaosave
                    <button class="btn btn-secondary">Quay về</button>
                </div>
            </form>
            }
        </div>
    </div>


