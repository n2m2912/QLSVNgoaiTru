<!-- DataTables Example -->
<div class="card mb-5">
    <div class="card-header">
        Thêm dịch vụ
    </div>
    <div class="card-body">
        <div class="col-md-8">
            <form>
                <div class="form-group">
                    <label>Mã chủ phòng: </label>
                    <input type="text" class="form-control" placeholder="Mã chủ phòng">
                </div>
                <div class="form-group">
                    <label>Tên chủ phòng: </label>
                    <input type="text" class="form-control" placeholder="Tên chủ phòng">
                </div>
                <div class="form-group">
                    <label>Số điện thoại: </label>
                    <input type="text" class="form-control" placeholder="Số điện thoại">
                </div>
                <div class="form-group">
                    <label>Hộ khẩu: </label>
                    <input type="text" class="form-control" placeholder="Hộ khẩu:">
                </div>
                <div class="form-group">
                    <label>Tên dịch vụ: </label>
                    <input type="text" class="form-control" placeholder="Tên dịch vụ">
                </div>
                <div class="form-group">
                    <label>Đơn vị tính: </label>
                    <input type="text" class="form-control" placeholder="Đơn vị tính">
                </div>
                <div class="form-group">
                    <label>Đơn giá: </label>
                    <input type="text" class="form-control" placeholder="Đơn giá">
                </div>
                <div class="form-group">
                    <label>Hình thức thanh toán: </label>
                    <input type="text" class="form-control" placeholder="Hình thức thanh toán">
                </div>
                <div class="form-group">
                    <label>Thời điểm thanh toán: </label>
                    <input type="date" class="form-control">
                </div>
                <div class="pb-2">
                    <input type="checkbox" class="form-control" placeholder="Quy định" style="display:inline; width: 5%"></input>
                    <p style="display:inline">Tôi chấp nhận những quy định.</p>
                </div>
            </form>
            <button class="btn btn-success">Đăng</button>
            <button class="btn btn-secondary">Quay về</button>
        </div>
    </div>

