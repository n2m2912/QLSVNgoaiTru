@using QLSVNgoaiTru.Models
@{
    ViewBag.Title = "Room";
    Layout = "~/Views/Shared/_LayoutCNT.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">Phòng trọ</li>
</ol>

<div class="card mb-5">
    <div class="card-header">
        <div class="float-left">
            <i class="fas fa-table"></i>Danh sách phòng
        </div>
        <div class="float-right">
            @Html.ActionLink("Thêm", "AddRoom", "ChuNT", null, new { @class = "btn btn-success" })
            <a class="btn btn-danger text-white text-white" data-toggle="modal" data-target="#deleteModal">Xóa chọn</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="select-all"></th>
                        <th>Mã phòng</th>
                        <th>Tên</th>
                        <th>Mô tả</th>
                        <th>Tiền cọc</th>
                        <th>Hình</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th><input type="checkbox" class="select-all"></th>
                        <th>Mã phòng</th>
                        <th>Tên</th>
                        <th>Mô tả</th>
                        <th>Tiền cọc</th>
                        <th>Hình</th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var phong in Model)
                    {
                    <tr>
                        <td><input type="checkbox" class="checkbox"></td>
                        <td>@phong.Maphongtro</td>
                        <td>@phong.Tenphong</td>
                        <td>@phong.Mota</td>
                        <td>@phong.Tiendatcoc</td>
                        <td>
                            <img src="@Url.Content("~/images/" + phong.Images)" style="width:170px;height:30%" />
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "EditRoom", "ChuNT", new { id = phong.Maphongtro }, new { @class = "btn btn-info m-1" })
                            <a class="btn btn-danger text-white m-1" data-toggle="modal" data-target="#deleteModal">Xóa</a>
                        </td>
                    </tr>

                    }

                    </tbody>
            </table>
        </div>
    </div>
</div>


