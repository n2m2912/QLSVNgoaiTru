@model IEnumerable<QLSVNgoaiTru.Models.phieudongtienphong>
@{
                /**/

                ViewBag.Title = "PhieuDongTienPhong";
                Layout = "~/Views/Shared/_LayoutCNT.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">Dịch vụ</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-5">
    <div class="card-header">
        <div class="float-left">
            <i class="fas fa-table"></i>Danh sách dịch vụ
        </div>
        <div class="float-right">
            @Html.ActionLink("Thêm", "AddPhieuDongTienPhong", "ChuNT", null, new { @class = "btn btn-success" })
            <a class="btn btn-danger text-white text-white" data-toggle="modal" data-target="#deleteModal">Xóa chọn</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="select-all"></th>
                        <th>Mã phiếu đóng tiền phòng</th>
                        <th>Ngày lập phiếu</th>
                        <th>Số tiền</th>
                        <th>Mã phòng trọ</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th><input type="checkbox" class="select-all"></th>
                        <th>Mã phiếu đóng tiền phòng</th>
                        <th>Ngày lập phiếu</th>
                        <th>Số tiền</th>
                        <th>Mã phòng trọ</th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var pdtp in Model)
                    {
                    <tr>
                        <td><input type="checkbox" class="checkbox"></td>
                        <td>@pdtp.Maphieudongtienphong</td>
                        <td>@pdtp.Ngaylap</td>
                        <td>@pdtp.SoTien</td>
                        <td>@pdtp.Maphongtro</td>
                        <td>
                            @Html.ActionLink("Sửa", "SuaPhieuDongTienPhong", "ChuNT", new { id = pdtp.Maphieudongtienphong}, new { @class = "btn btn-info m-1" })
                            @Html.ActionLink("Xóa", "XoaPhieuDongTienPhong", "ChuNT", new { id = pdtp.Maphieudongtienphong }, new { @class = "btn btn-danger text-white m-1", @onclick = "return confirm('Bạn muốn xóa sinh viên này?');" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


