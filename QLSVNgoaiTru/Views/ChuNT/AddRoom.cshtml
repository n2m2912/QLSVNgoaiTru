
@{
    ViewBag.Title = "AddRoom";
    Layout = "~/Views/Shared/_LayoutCNT.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">
        <a href="cnt-room.html">Danh sách phòng</a>
    </li>
    <li class="breadcrumb-item">Thêm phòng</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-5">
    <div class="card-header">
        Thêm phòng
    </div>
    <div class="card-body">
        <div class="col-md-8">
            <form>
                <div class="form-group">
                    <label>Mã chủ phòng: </label>
                    <input type="text" class="form-control" placeholder="Mã chủ phòng">
                </div>
                <div class="form-group">
                    <label>Tên chủ phòng: </label>
                    <input type="text" class="form-control" placeholder="Tên chủ phòng">
                </div>
                <div class="form-group">
                    <label>Số điện thoại: </label>
                    <input type="text" class="form-control" placeholder="Số điện thoại">
                </div>
                <div class="form-group">
                    <label>Tiền đặt cộc: </label>
                    <input type="text" class="form-control" placeholder="Tiền đặt cộc">
                </div>
                <div class="form-group">
                    <label>Số phòng: </label>
                    <input type="text" class="form-control" placeholder="Số phòng">
                </div>
                <div class="form-group">
                    <label>Nội quy: </label>
                    <textarea class="form-control" placeholder="Số phòng"></textarea>
                </div>
                <div class="form-group">
                    <label>Hình ảnh: </label><br>
                    <button id="imageDrop" class="btn btn-primary" onclick="document.getElementById('uploadImage').click()" title="Click or Drag Image">Upload image</button>
                    <input id="uploadImage" type="file" />
                </div>
                <div class="pb-2">
                    <input type="checkbox" class="form-control" placeholder="Quy định" style="display:inline; width: 5%"></input>
                    <p style="display:inline">Tôi chấp nhận những quy định.</p>
                </div>
            </form>
            <button class="btn btn-success">Đăng</button>
            <button class="btn btn-secondary">Quay về</button>
        </div>
    </div>

