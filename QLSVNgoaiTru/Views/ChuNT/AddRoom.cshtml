@model QLSVNgoaiTru.Models.phongtro

@{
    ViewBag.Title = "AddRoom";
    Layout = "~/Views/Shared/_LayoutCNT.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">
        <a href="cnt-room.html">Danh sách phòng</a>
    </li>
    <li class="breadcrumb-item">Thêm phòng</li>
</ol>

@using (Html.BeginForm("AddRoom", "ChuNT", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div class="card-header">
        Thêm phòng
    </div>
    <hr />
    <div class="card-body">
        <div class="col-md-8">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Tiendatcoc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tiendatcoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tiendatcoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sophong, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Sophong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sophong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Noiquyphongtro, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Noiquyphongtro, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Noiquyphongtro, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Hình ảnh: </label><br>
                <button id="imageDrop" class="btn btn-primary" onclick="document.getElementById('uploadImage').click()" title="Click or Drag Image">Upload image</button>
                <input id="uploadImage" type="file" name="fileUpload" />
                <img src="@Url.Content("~/images/"+Model.Images)" width="250px" /> (Hình ảnh hiện tại @Model.Images))
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Googlemap, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Googlemap, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Googlemap, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tenphong, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tenphong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tenphong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mota, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="pb-2">
                <input id="accept" type="checkbox" class="form-control" placeholder="Quy định" style="display:inline; width: 5%" onclick="acceptLic();"></input>
                <p style="display:inline">Tôi chấp nhận những quy định.</p>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="submit" type="submit" value="Lưu" class="btn btn-success" />
                    <button class="btn btn-secondary"><a href="/ChuNT" style="text-decoration:none;color:white"> Quay về</a></button>
                </div>
            </div>
        </div>
    </div>
    </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
