@model QLSVNgoaiTru.Models.CustomObject
@{
    ViewBag.Title = "EditRoom";
    Layout = "~/Views/Shared/_LayoutCNT.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">
        <a href="/ChuNT/Room">Danh sách phòng</a>
    </li>
    <li class="breadcrumb-item">Sửa phòng</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-5">
    <div class="card-header">
        Sửa phòng
    </div>
    <div class="card-body">
        <div class="col-md-8">
            @using (Html.BeginForm("SuaLH", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                <form>
                    <div class="form-group">
                        <label>Mã chủ phòng: </label>
                        <input type="text" class="form-control" placeholder="Mã chủ phòng" value="@Html.DisplayFor(model => model.chunhatro.Machunhatro)">
                    </div>
                    <div class="form-group">
                        <label>Tên chủ phòng: </label>
                        <input type="text" class="form-control" placeholder="Tên chủ phòng" value="@Html.DisplayFor(model => model.chunhatro.Tenchunhatro)">
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại: </label>
                        <input type="text" class="form-control" placeholder="Số điện thoại" value="@Html.DisplayFor(model => model.chunhatro.SDT)">
                    </div>
                    <div class="form-group">
                        <label>Tiền đặt cộc: </label>
                        <input type="text" class="form-control" placeholder="Tiền đặt cộc" value="@Html.DisplayFor(model => model.phongtro.Tiendatcoc)">
                    </div>
                    <div class="form-group">
                        <label>Số phòng: </label>
                        <input type="text" class="form-control" placeholder="Số phòng" value="@Html.DisplayFor(model => model.phongtro.Sophong)">
                    </div>
                    <div class="form-group">
                        <label>Nội quy: </label>
                        <textarea class="form-control" placeholder="Nội quy" value="@Html.DisplayFor(model => model.phongtro.Noiquyphongtro)"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Hình ảnh: </label><br>
                        <button id="imageDrop" class="btn btn-primary" onclick="document.getElementById('uploadImage').click()" title="Click or Drag Image">Upload image</button>
                        <input id="uploadImage" type="file" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Sửa" class="btn btn-success" />
                        <button class="btn btn-secondary">Quay về</button>
                    </div>
                </form>
            }
        </div>
    </div>

