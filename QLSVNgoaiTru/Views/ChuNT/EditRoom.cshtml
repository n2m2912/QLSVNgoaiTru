@model QLSVNgoaiTru.Models.phongtro

@{
    ViewBag.Title = "EditRoom";
    Layout = "~/Views/Shared/_LayoutCNT.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">
        <a href="cnt-room.html">Danh sách phòng</a>
    </li>
    <li class="breadcrumb-item">Sửa phòng</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-5">
    <div class="card-header">
        Sửa phòng
    </div>
    <div class="card-body">
        <div class="col-md-8">
            @using (Html.BeginForm("EditRoom", "ChuNT", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
            <form>
                @Html.HiddenFor(model => model.Maphongtro)
                <div class="form-group">
                    @Html.LabelFor(model => model.Diachi)
                    @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Sophong)
                    @Html.EditorFor(model => model.Sophong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sophong, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Tiendatcoc)
                    @Html.EditorFor(model => model.Tiendatcoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tiendatcoc, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Noiquyphongtro)
                    @Html.EditorFor(model => model.Noiquyphongtro, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Noiquyphongtro, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Mota)
                    @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Hình ảnh: </label><br>
                    <input id="fileupload" name="fileupload" type="file" />
                    <br />
                    <img src="@Url.Content("~/images/phongtro/" + Model.Images)" style="width:200px;height:auto;" />
                    @ViewBag.Thongbao
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                    @ViewBag.Thongbaosave
                    <button class="btn btn-secondary">Quay về</button>
                </div>
            </form>
            }
            </div>
    </div>

