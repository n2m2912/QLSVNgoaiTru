@model IEnumerable<QLSVNgoaiTru.Models.chunhatro>
@{
    ViewBag.Title = "Chunhatro";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Trang chủ</a>
    </li>
    <li class="breadcrumb-item">Danh sách chủ nhà trọ</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-5">
    <div class="card-header">
        <div class="float-left">
            <i class="fas fa-user-circle"></i>Danh sách chủ nhà trọ
        </div>
        <div class="float-right">
            @Html.ActionLink("Thêm", "Themchunhatro", "Admin", null,  new { @class = "btn btn-success" })
            <a class="btn btn-danger text-white text-white" data-toggle="modal" data-target="#deleteModal">Xóa chọn</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="select-all"></th>
                        <th>@Html.DisplayNameFor(model => model.Machunhatro)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tenchunhatro)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SDT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hokhau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Imagees)
                        </th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th><input type="checkbox" class="select-all"></th>
                        <th>@Html.DisplayNameFor(model => model.Machunhatro)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tenchunhatro)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SDT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hokhau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Imagees)
                        </th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" class="checkbox"></td>
                            <td> @Html.DisplayFor(modelItem => item.Machunhatro)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tenchunhatro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hokhau)
                            </td>
                            <td>
                                <img src="@Url.Content("~/images/chunhatro/" + item.Imagees)" style="width:170px;height:30%" />
                            </td>
                            <td>
                                @Html.ActionLink("Chi tiết", "CNTDetail", "Admin", new { id = item.Machunhatro }, new { @class = "btn btn-info m-1" })
                            </td>
                        </tr>
                    }
                    </tbody>
            </table>
        </div>
    </div>
</div>

