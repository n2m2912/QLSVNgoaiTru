@using QLSVNgoaiTru.Models
@using PagedList.Mvc;
@model PagedList.PagedList<phongtro>
@{
    ViewBag.Title = "MoreRooms";
    Layout = "~/Views/Shared/_LayoutDangky.cshtml";
}
<h1 class="mt-4 mb-3">
    Danh sách phòng
</h1>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index">Home</a>
    </li>
    <li class="breadcrumb-item active">Danh sách phòng</li>
</ol>
<div class="row">
    @foreach (var phong in Model)
    {
        <div class="col-lg-4 col-sm-6 portfolio-item">
            <div class="card h-100">
                <a href="@Url.Action("Detail", "Home", new {id =phong.Maphongtro })">
                    <img class="img-fluid card-img-top" alt="" src="~/images/phongtro/@phong.Images" style="width:100%;height:300px;object-fit: cover;" />
                </a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="@Url.Action("Detail", "Home")">@phong.Sophong</a>
                    </h4>
                    <p class="card-text">@phong.Mota</p>
                </div>
            </div>
        </div>
    }
</div>
<!-- Pagination -->
<div>
    @Html.PagedListPager(Model, page => Url.Action("MoreRooms", "Home", new { page = page }),new PagedListRenderOptions { LiElementClasses =new string[] { "page-item"},UlElementClasses=new string []{ "pagination justify-content-center" } })
</div>

